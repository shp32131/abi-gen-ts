{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "allowJs": false,

    "sourceMap": true,

    "outDir": "lib",
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true
  },

  "include": [
    "./src/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
